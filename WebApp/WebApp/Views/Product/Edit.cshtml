@using Models;
@using ViewModel;
@model EditViewProduct;
@{
    ViewProduct product = ViewData["product"] as ViewProduct;
    List<SelectListItem> categories = ViewData["categories"] as List<SelectListItem>;
  
}
<form asp-action="Edit" method="post" asp-controller="product" enctype="multipart/form-data">
    <div class="mb-3 d-none">
        <input  class="form-control" asp-for="ID" value="@product.ID">
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" value="@product.Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input class="form-control" asp-for="Description" value="@product.Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input class="form-control" asp-for="Price" value="@product.Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" value="@product.Quantity">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CategoryID" class="form-label"></label>
        <select asp-for="CategoryID" asp-items="@categories">
            @* @foreach (Category category in categories)
            {
                @if (category.ID == product.CategoryID)
                {
                    <option value="@category.ID" selected>@category.Name</option>
                }
                else
                {
                    <option value="@category.ID">@category.Name</option>
                }
            } *@
        </select>
    </div>
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            @if (product.ImagePaths.Count > 0)
            {
                @foreach (var attach in @product.ImagePaths)
                {
                    <div class="carousel-item active">
                        <img src="/Images/@attach" class="d-block w-100" alt="...">
                        <input asp-for="ImagePaths" value="@attach" hidden >
                    </div>

                }
            }
        </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Images" class="form-control" multiple>
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>